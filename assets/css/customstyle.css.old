/* My style css */
/* Karla,Exo,Coda,Voces,Droid Sans,Roboto   */
@import "http://fonts.googleapis.com/css?family=Roboto";
/* When using the navbar-top-fixed */ 
body {
	padding-top: 46px; 
	padding-bottom: 40px; 
	background-color: #E8E8E8;	
	font-family: 'Roboto','Arial Narrow',sans-serif
}

.container {
	max-width: 99%;
}
.navbar-default {
	border-color: #0D0D0D;
}
.navbar-default .navbar-brand {
    color: #FFFFFF;
}

.navbar {
	background: #0D0D0D; /* for non-css3 browsers */
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#575757', endColorstr='#0D0D0D'); /* for IE */
	background: -webkit-gradient(linear, left top, left bottom, from(#575757), to(#0D0D0D)); /* for webkit browsers */
	background-image: -moz-linear-gradient(center top , #575757 0px, #0D0D0D 100%); /* for firefox 3.6+ */
	
	box-shadow: 0 5px 10px rgba(50, 50, 50, 0.5);
}

.nav > li > a {
	text-decoration: none;
	color: #FFFFFF;
    display: block;
    padding: 15px 15px;
    position: relative;

}

.nav > li > a:hover , .nav > li > a:focus{
	text-decoration: none;
	color: #CCCCCC;
    background-color: #0D0D0D;
    border-color: #0D0D0D;
}

.nav .open > a, .nav .open > a:hover, .nav .open > a:focus {'
	text-decoration: none;
	color: #FFFFFF;
    background-color: #0D0D0D;
    border-color: #0D0D0D;
}

.list-group-item {
    background-color: transparent ;
}

#ConfigTitle {
    margin-right: 16px;
    margin-top: 16px;
}

#ConfigContent .config-header {
    font-size: 36px;
    font-weight: bold;
    margin-top: 6px;
    padding: 0 6px 0px;
	color: #000000;
	border-bottom: 1px solid #CCCCCC;
}

.footer {
	width: 100%;
    background-color: #f5f5f5;
    #background-image: linear-gradient(to top, #FFFFFF, #f5f5f5);
	border-top: 1px solid #CCCCCC;
	height: 40px;
    margin: 10px 0 0;
	position: fixed;
	bottom: 0;	
}

.copyright{
	padding-top: 5px; 
    font-size: 20px;
    font-weight: bold;
	color: #999999;
	text-align: center;
}

/* top toolbox (length-combo and pager) for tables */
.toolbox-top {
	background-color: #FAFAFA;
	margin-bottom: 8px;
	padding: 6px;
	border-bottom: 1px solid #CCCCCC;
}

/* combobox with page length for tables */
div.toolbox-length select {
	width: 75px;
}

.toolbox-info {
    margin-top: 10px;
	#background-color: #FAFAFA;	
	color: #595959;
	padding: 6px;
}

.pagination {
	margin: 0;
}

.pagination a {
	
}

/* links in black color */
.table a:hover {
	color: #000000;
}

#menu_container {
	float:left;
	width:100%;
	position:relative;
	right:85%;
	background-color:#f5f5f5; /* column 1 background colour */
	border-right: 1px solid #CCCCCC;
}
#overall_container {
	clear:left;
	float:left;
	width:100%;
	position:relative;
	overflow:hidden;
	background-color:#ffffff; /* column 2 background colour */
	border-right: 1px solid #CCCCCC;
	border-left: 1px solid #CCCCCC;
	border-bottom: 1px solid #CCCCCC;
	#box-shadow: 0 5px 5px rgba(51, 51, 51, 0.3);
	#border-radius: 6px 6px 6px 6px;	
}
#leftbox {
	float:left;
	width:15%;
	position:relative;
	left:85%;
	overflow:hidden;
	padding-top: 10px;
	padding-bottom: 18px;
}
#rightbox {
	float:left;
	width:83%;
	position:relative;
	left:86%;
	overflow:hidden;
	padding-bottom: 2px;

}

/* content        */
.content_right {
	#border-left: 1px solid #CCCCCC;
}

.content_right_header {
    font-size: 18px;
    font-weight: bold;
	border-bottom: 1px solid #CCCCCC;
	color: #999999;
}

.content_right_content {

}

.panel-margin{
    margin-top: 60px;

}

